<div class="block_sans_image block_page {% if block.colorTitre == 'Bleu' %}vert_h3{% else %}bleu_h3{% endif %}" {% if block.background != '#000000' %}style="background:{{block.background}}"{% endif %}>
	<div class="container">
		{% if block.titre is not empty %}
			<h2 class="titre_block" style="color:{% if block.colorTitre == 'Bleu' %}#264a67{% else %}#86c424{% endif %}">
				{% if block.icon is not empty %}
					<img src="{{ asset (vich_uploader_asset(block,'iconFile')) }}" alt="{{block.titre}}">
				{% endif %}
				{{block.titre}}
			</h2>
		{% endif %}
		<div class="content_block">
			{{block.contenu|raw}}
		</div>
	</div>
</div>